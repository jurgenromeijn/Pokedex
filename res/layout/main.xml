<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#333333"
    android:orientation="vertical" >
    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp" />
    <ImageView 
        android:id="@+id/textureView1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#cc0000"
        android:layout_alignParentBottom="true" />
    <ImageButton
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:background="@null"
        android:contentDescription="scan button"
        android:src="@drawable/pokeball_button" />
    <ImageView
        android:id="@+id/grid"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/scanButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/scanButton"
        android:scaleType="fitXY"
        android:src="@drawable/rooster" />
    <ImageView
        android:id="@+id/cameraIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/grid"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/presence_online" />
</RelativeLayout>